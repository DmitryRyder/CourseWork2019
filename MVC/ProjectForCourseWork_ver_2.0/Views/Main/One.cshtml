@using Common.DTO
@using Common
@using ProjectForCourseWork_ver_2._0.Extensions
@using Kendo.Mvc.Ui

@model IEnumerable<WaterVolumeDto>

<div class="title2">
    <h2>Отчет об объемах воды в органах управления</h2>
</div>

<div class="row2">
    @(Html.Kendo().Grid(Model)
        .BackGrid()
        .Name("grWaterVolume")
        .HtmlAttributes(new { style = "height:760px" })
        .Groupable(g => g.Enabled(true))
        .Columns(columns =>
        {
            columns.Bound(p => p.ManagementBodyName);
            columns.Bound(p => p.WaterVolume);
        })
        .Pageable()
        .Sortable()
        .Scrollable()
        .Filterable()
        .DataSource(dataSource => dataSource
        .Ajax()
        .Events(events => events.Error("error_handler"))
        .Model(model =>
        {
            model.Id(p => p.Id);
            model.Field(p => p.Id).Editable(false);
        })
        .PageSize(30)
        .Read(read => read.Action("GetWaterVolumeForManagementBodies", "Reports"))
        )
    )
</div>
