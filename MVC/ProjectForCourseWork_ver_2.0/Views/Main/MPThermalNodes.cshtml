@using Common.DTO
@using ProjectForCourseWork_ver_2._0.Extensions
@using Kendo.Mvc.UI

@model IEnumerable<ThermalNodeDto>

<div class="title2">
    <h2>Тепловые узлы</h2>
</div>

<div style="padding-bottom: 10px; padding-top: 10px" class="button-filters">
    <button id="open" class="k-button">Добавить тепловой узел</button>
</div>
<div class="row2">
    @(Html.Kendo().Grid(Model)
        .BackGrid()
        .Name("grThermalNodes")
        .HtmlAttributes(new { style = "height:760px" })
        .Groupable(g => g.Enabled(true))
        .Columns(columns =>
        {
            columns.Bound(p => p.ThermalNetworkName);
            columns.Bound(p => p.TypeOfNodeName);
            columns.Command(command => { command.Destroy(); }).Width(200);
        })
        .Editable(editable => editable.Mode(GridEditMode.InLine).DisplayDeleteConfirmation(false))
        .Pageable()
        .Sortable()
        .Scrollable()
        .Filterable()
        .DataSource(dataSource => dataSource
        .Ajax()
        .Events(events => events.Error("error_handler"))
        .Model(model =>
        {
            model.Id(p => p.Id);
            model.Field(p => p.Id).Editable(false);
        })
        .PageSize(30)
        .Read(read => read.Action("GetAllThermalNodes", "MPThermalNode"))
        //.Create(create => create.Action("AddRoom", "Rooms")).Events(p => p.Sync("rebindDataSource"))
        //.Update(update => update.Action("UpdateRoom", "Rooms"))
        .Destroy(update => update.Action("DeleteThermalNode", "MPThermalNode"))
        )
    )
    @(Html.Kendo().Window()
    .Name("AddThermalNodeWindow")
    .Width(420)
    .Height(300)
    .Visible(false)
    .Draggable(true)
    .Resizable()
    .Title("Добавление узла")
    .Actions(actions => actions.Refresh().Close())
    .LoadContentFrom("AddThermalNodeWindow", "Main")
    )
</div>
<script>
    var myWindow;
    $(document).ready(function () {
        myWindow = $("#AddThermalNodeWindow");
        $("#open").click(function (e) {
            myWindow.data("kendoWindow").open();
            myWindow.data("kendoWindow").center();
        });
    });
    function rebindDataSource() {
        $("#grThermalNodes").data("kendoGrid").dataSource.read();
    }
</script>
